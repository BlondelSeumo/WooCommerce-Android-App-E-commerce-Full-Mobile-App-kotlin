<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
                name="model"
                type="com.iqonic.woobox.models.Reward"/>

        <variable
                name="callback"
                type="com.iqonic.woobox.base.BaseRecyclerAdapter.OnClickListener"/>
    </data>

    <RelativeLayout
            android:id="@+id/rlMainReward"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_170sdp"
            android:layout_marginEnd="@dimen/spacing_standard_new"
            android:layout_marginBottom="@dimen/spacing_standard"
            android:onClick="@{(view) -> callback.onClick(view,model)}">


        <ImageView
                android:id="@+id/scratch_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_logo_sidebar"
        />


    </RelativeLayout>
</layout>
