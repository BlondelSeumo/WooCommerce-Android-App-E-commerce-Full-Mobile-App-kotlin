<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/spacing_middle"
        >
        <ImageView
            android:id="@+id/ivDashboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/profile"
            android:scaleType="fitXY"
           />
         <View
             android:id="@+id/viewOverlay"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:visibility="invisible"
             android:background="@color/color_selected"/>
        <CheckBox
            android:id="@+id/cbDashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:buttonTint="@color/commonColorWhite"
            android:layout_margin="@dimen/spacing_control_half"
            android:layout_gravity="end"/>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>