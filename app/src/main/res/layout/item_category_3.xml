<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.iqonic.woobox.models.CategoryData" />

        <variable
            name="callback"
            type="com.iqonic.woobox.base.BaseRecyclerAdapter.OnClickListener" />
    </data>

        <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/llMen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/_70sdp"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/ivCategory"
                style="@style/CatIcon"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@null"
                android:padding="0dp"
                android:src="@drawable/ic_sihrt"
                android:layout_marginTop="@dimen/spacing_standard"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/tvCatName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:singleLine="false"
                android:maxLines="2"
                android:textSize="@dimen/font_size_small"
                android:textAppearance="@style/FontSemiBold"
                android:layout_gravity="center_horizontal"
                android:paddingTop="@dimen/spacing_control"
                android:textColor="@color/textColorPrimary"
                android:layout_marginTop="@dimen/spacing_control_half"
                android:paddingBottom="@dimen/spacing_standard"
                tools:text="Clothes" />

        </LinearLayout>


</layout>
